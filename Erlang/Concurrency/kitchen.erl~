-module(kitchen).
-compile(export_all).

fridge1() ->
    receive 
	{From {Store, _Food}} ->
	    From ! {self(), ok},
	    fridge1();
	{From, {Take, _Food}} ->
	    %% uh..
	    From ! {self(), not_found},
	    fridge();
	terminate() ->
	    ok
    end.
